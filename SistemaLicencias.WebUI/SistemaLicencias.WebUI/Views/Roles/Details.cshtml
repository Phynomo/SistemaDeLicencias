@model SistemaLicencias.WebUI.Models.VWRolesViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="border:1px solid #283c4c;">
    <div class="card-header text-center" style="background: radial-gradient(circle, rgba(30,45,93,1) 50%, rgba(32,164,140,1) 100%);">

        <div class="row">
            <div class="col">
                <h1 class="text-white" style="margin-top:0px;">Detalles</h1>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col">
                <h4 class="text-white">Detalles del rol: @Model.role_Nombre</h4>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => model.role_Id)</label><br />
                <label>@Html.DisplayFor(model => model.role_Id)</label>
            </div>
            <div class="col">
                <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => model.role_Nombre)</label><br />
                <label>@Html.DisplayFor(model => model.role_Nombre)</label>
            </div>
        </div>

        <div class="row">
            <div class="col d-flex justify-content-end">
                @Html.ActionLink("Editar", "Edit", new { id = Model.role_Id }, new { @class = "btn btn-warning mx-1" })
                <a class="btn btn-secondary" asp-action="Index">Regresar al listado</a>
            </div>
        </div>

    </div>


</div>



<div class="row mt-3 d-flex justify-content-center">
    <div class="col">
        <div class="ibox ">
            <div class="card-header text-center collapse-link" style="background: rgb(30,45,93); background: radial-gradient(circle, rgba(30,45,93,1) 50%, rgba(0,193,199,1) 100%); ">
                <div class="row">
                    <div class="col d-flex justify-content-start">
                        <a class="">
                            <i class="fa fa-chevron-down"></i>
                        </a>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <h3 class="text-white text-center">Pantallas con acceso</h3>
                    </div>
                    <div class="col d-flex justify-content-end">
                        <a class="">
                            <i class="fa fa-chevron-down"></i>
                        </a>
                    </div>
                </div>

            </div>
            <div class="ibox-content" style="display:none; border: 1px solid black; border-top:none;">
                @foreach (var Listado in ViewBag.Pantallas)
                {

                    <div class="row">
                        <div class="col">
                            <label class="text-black font-weight-bold">Id de la pantalla</label><br />
                            <label>@Listado.pant_Id</label>
                        </div>
                        <div class="col">
                            <label class="text-black font-weight-bold">Pantalla</label><br />
                            <label>@Listado.pant_Nombre</label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>





<div class="row">
    <div class="col">
        <div class="ibox ">
            <div class="ibox-title bg-dark">
                <h5 class="text-white">Auditoría</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-down"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content" style="display:none; border: 1px solid black; border-top:none;">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Accion</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Creacion</td>
                            <td>@Html.DisplayFor(model => model.UsuarioCreacion)</td>
                            <td>@Html.DisplayFor(model => model.role_FechaCreacion)</td>
                        </tr>
                        <tr>
                            <td>Modificacion</td>
                            <td>@Html.DisplayFor(model => model.UsuarioModificacion)</td>
                            <td>@Html.DisplayFor(model => model.role_FechaModificacion)</td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

