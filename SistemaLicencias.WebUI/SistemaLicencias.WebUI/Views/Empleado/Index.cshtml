@model IEnumerable<SistemaLicencias.WebUI.Models.VWEmpleadosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<input hidden id="resultado" value="@ViewBag.Resultado" />

<div class="card" style="border:1px solid #283c4c;">    
    <div class="card-header text-center" style="background: radial-gradient(circle, rgba(30,45,93,1) 50%, rgba(32,164,140,1) 100%); ">

        <div class="row">
            <div class="col">
                <h1 class="text-white" style="margin-top:0px;">Empleados</h1>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-4">
                <a asp-action="Create" class="btn btn-block btn-primary">Agregar</a>
                @*<button onclick="OpenModalCreate()" type="button" class="btn btn-block btn-primary">
                        Agregar
                    </button>*@
            </div>
        </div>

    </div>
    <div class="card-body table-responsive">
        <table class="table table-hover dataTables footable toggle-arrow-tiny " data-filtering="true">
            <thead style=background-color: transparent;>
                <tr>
                    <th data-toggle="true">
                        @Html.DisplayNameFor(model => model.empe_Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.empe_NombreCompleto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.empe_Identidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.empe_Telefono)
                    </th>
                    <th data-hide="all">
                        @Html.DisplayNameFor(model => model.empe_FechaNacimiento)
                    </th>
                    <th data-hide="all">
                        @Html.DisplayNameFor(model => model.empe_Sexo)
                    </th>
                    <th data-hide="all">
                        @Html.DisplayNameFor(model => model.eciv_Descripcion)
                    </th>
                    <th data-hide="all">
                        @Html.DisplayNameFor(model => model.muni_Nombre)
                    </th>
                    <th data-hide="all">
                        @Html.DisplayNameFor(model => model.depa_Nombre)
                    </th>
                    <th data-hide="all">
                        @Html.DisplayNameFor(model => model.empe_DireccionExacta)
                    </th>
                    <th data-hide="all">
                        @Html.DisplayNameFor(model => model.sucu_Nombre)
                    </th>
                    <th data-hide="all">
                        @Html.DisplayNameFor(model => model.carg_Descripcion)
                    </th>
                    <th class="">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.empe_Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.empe_NombreCompleto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.empe_Identidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.empe_Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.empe_FechaNacimiento)
                        </td>
                        <td>
                            <span class="pie">@Html.DisplayFor(modelItem => item.empe_Sexo)</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.eciv_Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.muni_Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.depa_Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.empe_DireccionExacta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sucu_Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.carg_Descripcion)
                        </td>
                        <td class="d-flex justify-content-start">
                            @Html.ActionLink("Editar", "Edit", new { id = item.empe_Id }, new { @class= "btn btn-warning btn-sm  btn-outline" }) 
                            @Html.ActionLink("Detalles", "Details", new { id = item.empe_Id }, new { @class= "btn btn-info mx-1 btn-outline btn-sm" }) 
                            <button class="btn btn-danger btn-sm btn-outline" type="button" onclick="OpenModalDelete('@item.empe_Id')">Eliminar</button>
                        </td>                     
                    </tr>
}
            </tbody>
        </table>
    </div>
</div>
@Html.Partial("_DeleteViewPartial", new SistemaLicencias.WebUI.Models.EmpleadosViewModel())

<script src="~/js/App/Licencias/Empleados.js"></script>