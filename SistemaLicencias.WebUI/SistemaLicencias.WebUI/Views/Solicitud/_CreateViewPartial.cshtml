@model SistemaLicencias.WebUI.Models.SolicitudViewModel


<div class="modal inmodal" id="ModalCreate" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated" id="ModalCreateClass">
            <div class="modal-header">
                <h4 class="modal-title">Agregar</h4>
                <small class="font-bold">Ingrese una nueva solicitud</small>
            </div>
            <div class="modal-body">
                <form asp-action="Create" id="FormCreate">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Solicitante</label>
                                <select asp-for="soli_Id" id="soli_Id" class="form-control" asp-items="ViewBag.soli_Id">
                                    <option value="0"> -- Seleccione un Solicitante -- </option>
                                </select>
                                <span id="lbSoli_Id" class="text-danger" hidden>Este campo es requerido</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Sucursal</label>
                                <select asp-for="sucu_Id" id="sucu_Id" class="form-control" asp-items="ViewBag.sucu_Id">
                                    <option value="0"> -- Seleccione una Sucursal -- </option>
                                </select>
                                <span id="lbSucu_Id" class="text-danger" hidden>Este campo es requerido</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Tipo Licencia</label>
                                <select asp-for="tili_Id" id="tili_Id" class="form-control" asp-items="ViewBag.tili_Id">
                                    <option value="0"> -- Seleccione una Licencia -- </option>
                                </select>
                                <span id="lbtili_Id" class="text-danger" hidden>Este campo es requerido</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label class="control-label">Pago</label>
                            <div class="form-group">
                                <label class="form-check-label">
                                    <input style="margin-left:-10px" type="checkbox" class="js-switch"  asp-for="stud_Pago" />
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="PostModalCreate()">Agregar</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/App/Licencias/Solicitud.js"></script>








