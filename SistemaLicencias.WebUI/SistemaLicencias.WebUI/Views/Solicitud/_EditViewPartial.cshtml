@model SistemaLicencias.WebUI.Models.SolicitudViewModel

<div class="modal inmodal" id="ModalEdit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated" id="ModalEditClass">
            <div class="modal-header">
                <h4 class="modal-title">Editar</h4>
                <small class="font-bold">Realiza el cambio que desees hacer</small>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" id="FormEdit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="stud_Id" type="text" id="stud_IdEdit"   hidden />

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Solicitante</label>
                                <select asp-for="soli_Id" id="soli_IdEdit" class="form-control" asp-items="ViewBag.soli_Id" disabled>
                                    <option value="0"> -- Seleccione un Solicitante -- </option>
                                </select>
                                <span id="lbSoli_IdEdit" class="text-danger" hidden>Este campo es requerido</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Sucursal</label>
                                <select asp-for="sucu_Id" id="sucu_IdEdit" class="form-control" asp-items="ViewBag.sucu_Id">
                                    <option value="0"> -- Seleccione una Sucursal -- </option>
                                </select>
                                <span id="lbSucu_IdEdit" class="text-danger" hidden>Este campo es requerido</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Tipo Licencia</label>
                                <select asp-for="tili_Id" id="tili_IdEdit" class="form-control" asp-items="ViewBag.tili_Id">
                                    <option value="0"> -- Seleccione una Licencia -- </option>
                                </select>
                                <span id="lbtili_IdEdit" class="text-danger" hidden>Este campo es requerido</span>
                            </div>
                        </div>
                       
                        <div class="col-sm-6">
                            <label class="control-label">Pago</label>
                            <div class="form-group">                             
                                <!-- Rounded switch -->
                                <label class="switch">
                                    <input style="margin-left:-10px" type="checkbox" asp-for="stud_Pago" id="stud_pagoEdit" />
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="PostModalEdit()">Editar</button>
            </div>
        </div>
    </div>
</div>





<script src="~/js/App/Licencias/Solicitud.js"></script>


