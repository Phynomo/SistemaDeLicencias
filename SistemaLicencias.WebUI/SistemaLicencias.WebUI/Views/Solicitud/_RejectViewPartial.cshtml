
@model SistemaLicencias.WebUI.Models.RechazadosViewModel

<div class="modal inmodal" id="ModalReject" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated" id="ModalRejeactClass">
            <div class="modal-header">
                <h4 class="modal-title">Rechazar Solicitud</h4>
                <small class="font-bold"></small>
            </div>
            <div class="modal-body">
                <form asp-controller="Solicitud" asp-action="Reject" id="FormReject">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="stud_Id" type="text" id="stud_IdReject" hidden />

                    <div class="row">
                        <div class="col-sm-12">
                            
                            <div style="text-align:center"><label class="control-label">Observacion</label></div>
                            <textarea asp-for="rech_Observaciones" class="form-control" id="rech_ObservacionReject"></textarea>
                            <span id="lbRech_ObservacionReject" class="text-danger" hidden>Este campo es requerido</span>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="PostModalRejeact()">Aceptar</button>
            </div>
        </div>
    </div>
</div>
