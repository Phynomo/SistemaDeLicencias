@model SistemaLicencias.WebUI.Models.TipoLicenciasViewModel

<div class="modal inmodal" id="ModalEdit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated" id="ModalEditClass">
            <div class="modal-header">
                <h4 class="modal-title">Editar</h4>
                <small class="font-bold">Realiza el cambio que desees hacer</small>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" id="FormEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="tili_Id" hidden id="tili_IdE" class="form-control" />

                        <label asp-for="tili_Descripcion" class="control-label"></label>
                        <input asp-for="tili_Descripcion" id="tili_DescripcionE" class="form-control" />
                        <span id="lbltili_DescripcionE" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="PostModalEdit()">Editar</button>
            </div>
        </div>
    </div>
</div>