@model SistemaLicencias.WebUI.Models.TipoLicenciasViewModel

<div class="modal inmodal" id="ModalCreate" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated" id="ModalCreateClass">
            <div class="modal-header">
                <h4 class="modal-title">Agregar</h4>
                <small class="font-bold">Ingresa el nuevo tipo de licencia que deseas ingresar</small>
            </div>
            <div class="modal-body">
                <form asp-action="Create" id="FormCreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="tili_Descripcion" class="control-label"></label>
                        <input asp-for="tili_Descripcion" id="tili_DescripcionDD" class="form-control" />
                        <span id="lbltili_Descripcion" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="PostModalCreate()">Agregar</button>
            </div>
        </div>
    </div>
</div>